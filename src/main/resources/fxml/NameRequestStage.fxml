<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<DialogPane prefWidth="400.0" styleClass="stageBackground" stylesheets="@../style.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.italiandudes.ccu.client.javafx.controller.dialogs.NameDialog">
   <buttonTypes>
      <ButtonType fx:constant="CANCEL" />
      <ButtonType fx:constant="FINISH" />
   </buttonTypes>
   <header>
      <Label styleClass="labelColor" stylesheets="@../style.css" text="Nome">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
   </header>
   <content>
      <VBox spacing="10.0">
         <children>
            <TextField fx:id="txt_name" styleClass="txt" stylesheets="@../style.css" />
            <CheckBox fx:id="chbx_save" mnemonicParsing="false" text="Salvare il nome" textFill="#999999">
               <font>
                  <Font size="18.0" />
               </font>
            </CheckBox>
            <VBox fx:id="vb_error" prefWidth="100.0" visible="false">
               <children>
                  <Label fx:id="lb_error" maxWidth="1.7976931348623157E308" styleClass="error-label" stylesheets="@../style.css" text="Label" wrapText="true" />
               </children>
            </VBox>
         </children>
      </VBox>
   </content>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</DialogPane>
